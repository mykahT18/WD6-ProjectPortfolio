<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/foundation.min.css') }}" />
        <link rel="stylesheet" type="text/css" href="{{ asset('css/main.css') }}" />


    </head>
    <body>

      {% if home is defined %}
      <div class="top-bar" id="home">
      {% else %}
      <div class="top-bar" id="site">
      {% endif %}

        <div class="top-bar-left">
            <ul class="menu" data-dropdown-menu>
                <li class="menu-text"><a href="/">WD6 International</a></li>
            </ul>
        </div>
        <div class="top-bar-right">
            <ul class="menu">
              <li>
                <a href="/cart"><i class="fa fa-shopping-cart" aria-hidden="true"></i> cart </a>
              </li>
              {% if app.user %}
              <li>
                  <a href="/profile"><i class="fa fa-user" aria-hidden="true"></i> profile </a>
              </li>
              {% endif %}
              <li>
              {% if is_granted('ROLE_USER') %}
                <a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> log out</a>
              {% else %}
                <a href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</a>
              {% endif %}
              </li>
            </ul>
        </div>
    </div>

    {% if home is defined%}
    <div id="banner">
      <img src="{{ asset('images/banner.png') }}" alt="banner" />
    </div>
    {% endif %}

    <main class="grid-container" id="main-cont">
      {% block body %}
      {% endblock %}
    </main>
        {% block javascripts %}
        <script src="https://js.stripe.com/v3/"></script>
        <script type="text/javascript" src="{{ asset('js/vendor/jquery.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/vendor/what-input.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/vendor/foundation.min.js') }}"></script>
        <script type="text/javascript" src="{{ asset('js/app.js') }}"></script>
        {% endblock %}
    </body>


</html>

<div class="grid-x grid-padding-x">
{% for r in results %}
  <div class="large-4 medium-6 small-auto cell course">
    <div class="img_cart">
      <a href="/single" class="img_cart_link"></a>
      <a href="/cart/addCart/{{ r.id }}" class="cart_btn"><i class="fa fa-shopping-cart" aria-hidden="true"></i> cart </a>
      <a href="/cart/addFav/{{ r.id }}" class="wishlist_btn"><i class="fa fa-heart-o" aria-hidden="true"></i></a>
      <img src="{{ r.img }}" alt="image course" />
    </div>
    <div class="grid-x">
      <h2 class="large-auto cell">{{ r.title }}</h2>
      <div class="large-4 auto price">${{ r.price }}</div>
    </div>
    <p> {{ r.description }} </p>
    {{ dump(app.session.get('cart')) }}
  </div>
{% endfor %}

